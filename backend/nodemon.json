{
  "restartable": "rs",
  "legacyWatch": true, 
  "ignore": [
    ".git",
    "node_modules/**/node_modules"
  ],
  "verbose": true,
  "execMap": {
    "js": "node --harmony"
  },
  "events": {
    "restart": "echo '--------------------------------------------------------------------\nApp restarted due to file change:\n'$FILENAME'\"\n--------------------------------------------------------------------'"
  },
  "watch": [
    "app/",
    "app.js"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js json"
}